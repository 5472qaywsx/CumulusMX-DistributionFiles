{
    "fields": {
        "website": {
            "collapsible":true,
            "collapsed": true,
            "fields": {
                "hostname": {
                    "helper": "Enter the host name of the remote FTP server. Leaving this blank suppresses all FTP activities."
                },
                "ftpport": {
                    "helper": "Enter the FTP port to use. Common defaults are: FTP=21, FTPS=990, SFTP=22"
                },
                "sslftp": {
                    "type": "select",
                    "optionLabels": [
                        "0 - FTP (plain old FTP)",
                        "1 - Use SSL/TLS for FTP (FTPS)",
                        "2 - Use SSH for FTP (SFTP)"
                    ],
                    "removeDefaultNone": true,
                    "helper": "Select the protcol required by your web hoster"
                },
                "sshAuth": {
                    "type": "select",
                    "optionLabels": [
                        "Password",
                        "Pre-shared key",
                        "Password or pre-shared key"
                    ],
                    "removeDefaultNone": true,
                    "helper": "Select the authentication method for SFTP connections",
                    "dependencies": {
                        "sslftp": 2
                    }
                },
                "pskFile": {
                    "helper": "Filename for your private PSK file, include the full path if the file is not in your CumulusMX folder",
                    "dependencies": {
                        "sshAuth": ["psk","password_psk"]
                    }
                },
                "username": {
                },
                "password": {
                    "type": "password"
                },
                "forumurl": {
                    "type": "url"
                },
                "webcamurl": {
                    "type": "url"
                }
            }
        },
        "websettings": {
            "collapsible":true,
            "collapsed": true,
            "fields": {
                "autoupdate": {
                    "rightLabel": "Auto update (enable interval updates)",
                    "helper": "Select this to have Cumulus enable processing of files at the web interval, and FTP them if enabled"
                },
                "includestdfiles": {
                    "rightLabel": "Include standard files",
                    "helper": "Select this to have the standard web site files uploaded every update interval"
                },
                "includegraphdatafiles": {
                    "rightLabel": "Include graph data files",
                    "helpers": [
                        "Select this to have the graph data files uploaded",
                        "The recent data files are uploaded every interval update, the daily files once a day after rollover (and the first interval after start-up)"
                    ]
                },
                "activeftp": {
                    "rightLabel": "Active FTP mode",
                    "helper": "Not normally required - use with caution"
                },
                "ftprename": {
                    "rightLabel": "FTP rename",
                    "helper": "Use this if your FTP server supports it (most do)"
                },
                "ftpdelete": {
                    "rightLabel": "Delete before upload",
                    "helper": "Use this only if your FTP server requires it (most do not)"
                },
                "utf8encode": {
                    "rightLabel": "UTF-8 encoding",
                    "helper": "Use UTF-8 encoding for the standard files"
                },
                "ftplogging": {
                    "rightLabel": "FTP logging",
                    "helper": "Log FTP activity to ftplog.txt for diagnostic purposes"
                },
                "updateinterval": {
                    "helper": "Interval between web page updates in minutes"
                },
                "enablerealtime": {
                    "rightLabel": "Enable Realtime",
                    "helper": "Start the realtime timer so that realtime actions can take place"
                },
                "enablerealtimeftp": {
                    "rightLabel": "Enable realtime FTP",
                    "helper": "Establish the realtime FTP connection so that FTP uploads can take place at the realtime interval"
                },
                "realtimetxtftp": {
                    "rightLabel": "Realtime.txt FTP",
                    "helper": "FTP the realtime.txt file at the realtime interval. Cumulus MX does not use this file itself"
                },
                "realtimegaugestxtftp": {
                    "rightLabel": "Realtimegauges.txt FTP",
                    "helper": "FTP the realtimegauges.txt file at the realtime interval. Cumulus MX uses this for the SteelSeries gauges"
                },
                "realtimeinterval": {
                    "helper": "Interval between realtime updates in seconds"
                }
            }
        },
