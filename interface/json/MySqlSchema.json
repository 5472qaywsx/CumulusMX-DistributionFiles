                },
                "retention": {
                    "title": "Retention string"
                }
            }
        },
        "dayenabled": {
            "type": "boolean"
        },
        "dayfile": {
            "type": "object",
            "title": "Dayfile.txt upload",
            "properties": {
                "table": {
                    "title": "Table name"
                }
            }
        },
        "monthenabled": {
            "type": "boolean"
        },
        "monthly": {
            "type": "object",
